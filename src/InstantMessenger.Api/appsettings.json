{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "Microsoft.AspNetCore.Http.Connections": "Debug"
    }
  },
  "AllowedHosts": "*",
  "MailSender": {
    "Host": "localhost",
    "Port": 1025,
    "Email": "test@test.com",
    "Authenticate": false,
    "UseSsl": false
  },
  "ConnectionStrings": {
    "InstantMessengerDb": "Server=(localdb)\\mssqllocaldb;Database=InstantMessengerDb;Trusted_Connection=True;"
  },
  "IdentityOptions": {
    "Secret": "secret_that_needs_to_be_stored_in_some_vault",
    "Issuer": "instantMessenger",
    "ExpirationDays": "14",
    "ClientAppUrlBase": "http://localhost:4200",
    "ActivationEndpoint": "/identity/activate",
    "ResetPasswordEndpoint": "/identity/reset-password"
  },
  "HubEndpoints": [ "/api/friendships/hub", "/api/privateMessages/hub", "/api/groups/hub" ],
  "ApplicationInsights": {
    "ConnectionString": "",
    "LogLevel": {
      "Default": "Information"
    }
  }  
  "Outbox": {
    "Enabled": true,
    "IntervalMilliseconds": 200,
    "CleanupIntervalHours": 1,
    "ExpiryHours": 1
  }
}
